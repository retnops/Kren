<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.rps.krenwk.activity.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/videoroompack"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--KOLOM BROADCAST-->

            <LinearLayout
                android:layout_width="116dp"
                android:layout_height="128dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/BroadcastButton"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_action_broadcast"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/BroadcastText"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Video Broadcast"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp" />

            </LinearLayout>

            <!--KOLOM CONFERENCE-->

            <LinearLayout
                android:layout_width="119dp"
                android:layout_height="128dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ConferenceButton"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_action_conference"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/ConferenceText"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Video Conference"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp" />

            </LinearLayout>

            <!--KOLOM SURVIELLANCE-->

            <LinearLayout
                android:layout_width="127dp"
                android:layout_height="128dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/SurviellanceButton"
                    android:layout_width="126dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:paddingTop="8dp"
                    android:src="@drawable/baseline_settings_remote_white_24dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/RemoteButton"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remote Surviellance"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/videoroompack"
        android:background="#4A4A4A"
        >

    </LinearLayout>



